generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @unique
  username String @unique
  email    String @unique
  notes    Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
